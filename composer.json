{
  "name": "alex-patterson-webdev/doctrine-entity-repository",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "alex-patterson-webdev/date-time": "^1",
    "alex-patterson-webdev/entity": "dev-feature/1.0.0",
    "alex-patterson-webdev/event-dispatcher": "^1",
    "alex-patterson-webdev/factory": "^1",
    "doctrine/orm": "^2.7",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "@stable",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Arp\\DoctrineEntityRepository\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\DoctrineEntityRepository\\": "test/phpunit/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://dev.satis.local"
    }
  ],
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "secure-http": false,
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
