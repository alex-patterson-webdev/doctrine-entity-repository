{
  "name": "alex-patterson-webdev/doctrine-entity-repository",
  "description": "An event based implementation of the Doctrine ORM Entity Repository",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4 || >=8.0",
    "alex-patterson-webdev/log": "dev-feature/0.1.0",
    "alex-patterson-webdev/date-time": "dev-feature/3.0.0",
    "alex-patterson-webdev/entity": "^0.1.1",
    "alex-patterson-webdev/event-dispatcher": "dev-feature/2.0.0",
    "doctrine/orm": "^2.7",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan": ">=0.12",
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "autoload": {
    "psr-4": {
      "Arp\\DoctrineEntityRepository\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\DoctrineEntityRepository\\": "test/unit/"
    }
  },
  "scripts": {
    "test": [
      "@check",
      "@lint",
      "@analyse",
      "@unit-test:with-coverage"
    ],
    "test:dev": [
      "@check",
      "@lint",
      "@fix",
      "@analyse:max",
      "@unit-test"
    ],
    "check": "php vendor/bin/phpcs -s --standard=phpcs.xml --colors src/ test/",
    "lint": "php vendor/bin/php-cs-fixer fix --dry-run --config=.php_cs.dist",
    "fix": "php vendor/bin/php-cs-fixer fix --config=.php_cs.dist",
    "analyse": "php vendor/bin/phpstan analyse src/ test/ --level=6",
    "analyse:max": "php vendor/bin/phpstan analyse src --level=8",
    "unit-test": "php vendor/bin/phpunit",
    "unit-test:with-coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "php vendor/bin/phpunit --coverage-clover=test/coverage/clover.xml"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
